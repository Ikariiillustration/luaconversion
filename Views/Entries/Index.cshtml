@model IEnumerable<project2.Models.Entry>

@{
    ViewBag.Title = "Lua to Manifest Converter";
}

<h2>Entries</h2>
<form asp-controller="Entries" asp-action="Index" method="get">
    <p>
        Name: <input type="text" name="searchString" />
        Channel: <input type="text" name="channelString" />
        Directory: <input type="text" name="directoryString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<br />

<table class="table">
    <tr>
        <th>

    @using (Html.BeginForm("Clear", "Entries"))
    {
        <input type="submit" value="Clear" />
    }
            </th>
        <th>
    @using (Html.BeginForm("Download", "Entries"))
    {
        <input type="submit" value="Download" />
    }
            </th>
        </tr>

</table>

    <br />

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Channel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Directory)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Channel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Directory)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        }

    </table>
